<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_connection_creat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akhilesh.androidpcchat.client.Create_connection"
    android:background="#000000">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/Connect"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/port"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Connect To IP"
        android:textColor="#ffffff"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/port"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:id="@+id/IP"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:id="@+id/port"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/IP" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:text="Port"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_above="@+id/Connect"
        android:layout_alignParentStart="true" />

</RelativeLayout>
